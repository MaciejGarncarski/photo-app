{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "#build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "backend#build": {
      "dependsOn": ["^build"]
    },
    "frontend#build": {
      "dependsOn": ["^build", "backend#restart-deploy"]
    },
    "backend#restart-deploy": {},
    "format": {},
    "start": {},
    "check-types": {},
    "dev": {
      "cache": false
    }
  }
}
