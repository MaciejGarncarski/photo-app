{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "ui": "stream",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "backend#build": {
      "dependsOn": ["^build"]
    },
    "restart-backend": {
      "dependsOn": ["^backend#build"]
    },
    "frontend#build": {
      "dependsOn": ["^restart-backend"]
    },
    "restart-frontend": {
      "dependsOn": ["^frontend#build"]
    },
    "format": {},
    "start": {},
    "check-types": {},
    "dev": {
      "cache": false
    }
  }
}
